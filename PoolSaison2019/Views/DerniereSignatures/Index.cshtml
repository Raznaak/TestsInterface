@model IEnumerable<PoolSaison2019.Models.DerniereSignature>

@{
    ViewData["Title"] = "Signature Recente";
    var id = 0;
    var name = "";
    var team = "";
}




<h1>Signature récente</h1>
@if (Model == null)
{
    <p>Pas de signature récente</p>
}
else
{

    @foreach (var item in Model)
    {
        if (item.Id > id)
        {
            id = item.Id;
            name = item.Nom;
            team = item.Equipe;
        }
    }
    <table>
        <tr>
            <th>Numéro</th>
            <th>Nom</th>
            <th>Ville de l'équipe</th>
        </tr>
        <tr>
            <td>@id</td>
            <td>@name</td>
            <td>@team</td>
        </tr>
    </table>
}